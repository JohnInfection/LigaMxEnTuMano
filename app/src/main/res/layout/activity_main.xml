<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo2"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabla de  posiciones"
        android:id="@+id/btnTabPos"
        android:layout_marginTop="39dp"
        android:background="#00ffffff"
        android:textColor="#ffffffff"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/btnPart_Jornada"
        android:layout_alignStart="@+id/btnPart_Jornada" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABLA DE DECENSO"
        android:id="@+id/btnTabDesc"
        android:layout_below="@+id/btnTabPos"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:background="#00ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARTIDOS DE JORNADA"
        android:id="@+id/btnPart_Jornada"
        android:layout_below="@+id/btnTabDesc"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMACION POR EQUIPOS"
        android:id="@+id/btnInfo_eq"
        android:layout_below="@+id/btnPart_Jornada"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:background="#00ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABLA DE GOLEADORES"
        android:id="@+id/btnTab_Goleador"
        android:layout_below="@+id/btnInfo_eq"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:background="@drawable/bbva2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:id="@+id/iv_Logo"
        android:background="@drawable/pelota"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
